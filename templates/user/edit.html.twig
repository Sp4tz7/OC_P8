            <div class="col-12">
                <a href="{{ path('user_list') }}" class="text-small float-right"><i class="fa fa-chevron-left"></i> Retour Ã  la
                    liste des utilisateurs</a>
                {% set avatar = user.avatar? user.avatar: 'default_avatar.png' %}
               <h1> <img src="{{ absolute_url(asset(avatar_img_url~ avatar )) |imagine_filter('avatar_thumb') }}"
